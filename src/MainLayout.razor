@inherits LayoutComponentBase

<MudThemeProvider Theme="MyCustomTheme" />
<MudDialogProvider />
<MudSnackbarProvider />
<MudLayout>
     <MudAppBar Elevation="1">
        <MudText Typo="Typo.h4" Class="ml-3">Notepad</MudText>
        <MudText Typo="Typo.h6" Class="ml-3">minus minus</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
    </MudAppBar>
    <MudMainContent> 
        <MudPaper Elevation="1" Class="pa-3" Outlined="true" Square="true">
            @Body
        </MudPaper>
    </MudMainContent>
</MudLayout>


@code{
    MudTheme MyCustomTheme = new MudTheme()
    {
        Palette = new Palette()
        {
            Primary = Colors.Brown.Default,
            Secondary = Colors.Green.Accent4,
            AppbarBackground = Colors.Grey.Default,
        },
        PaletteDark = new PaletteDark()
        {
            Primary = Colors.Brown.Lighten1
        },

        LayoutProperties = new LayoutProperties()
        {
            DrawerWidthLeft = "260px",
            DrawerWidthRight = "300px"
        }
    };
}