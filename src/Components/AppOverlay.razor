<MudOverlay ZIndex="9999" Visible="@IsLoading" DarkBackground="true" Absolute="true" AutoClose="false">
        <MudProgressCircular Color="Color.Primary" Indeterminate="true"/><br/>
        <MudText>@Text</MudText>
</MudOverlay>

@code {
    [Parameter] public bool IsLoading { get; set; } = true;
    [Parameter] public string Text { get; set; } = "Loading...";
}